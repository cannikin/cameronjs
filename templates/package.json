{
  "name": "{{ appName }}",
  "version": "0.0.1",
  "scripts": {
    "build": "webpack && postcss --verbose code/stylesheets/application.pcss -o public/stylesheets/application.css",
    "clean": "del 'public/!(images|favicon.*)'",
    "dev": "$npm_execpath serve & $npm_execpath watch",
    "netlify": "$npm_execpath watch & netlify dev",
    "rebuild": "$npm_execpath clean && $npm_execpath build",
    "serve": "live-server --watch=./public --mount=/:./public --entry-file='public/404.html'",
    "watch": "webpack --watch & postcss --verbose code/stylesheets/application.pcss -o public/stylesheets/application.css --watch"
  },
  "private": true,
  "devDependencies": {
    "del-cli": "^3.0.0",
    "live-server": "^1.2.1"
  },
  "dependencies": {
    "@fullhuman/postcss-purgecss": "^1.3.0",
    "autoprefixer": "^9.6.1",
    "cameronjs-html-webpack-plugin": "^0.3.0",
    "postcss-cli": "^6.1.3",
    "postcss-import": "^12.0.1",
    "postcss-nested": "^4.1.2",
    "stimulus": "^1.1.1",
    "tailwindcss": "^1.1.2",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.8"
  },
  "peerDependencies": {
    "cameronjs": "^{{ version }}"
  }
}
